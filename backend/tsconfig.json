{
  "compilerOptions": {
    "types": [], // ✅ Ensures no implicit types are forced
    "typeRoots": ["./node_modules/@types"], // ✅ Explicitly tells TypeScript where to look for types
    "esModuleInterop": true, // ✅ Allows default imports from CommonJS modules like Firebase
    "strict": true, // ✅ Ensures better type safety
    "forceConsistentCasingInFileNames": true, // ✅ Prevents casing mismatches in imports
    "skipLibCheck": true // ✅ Avoids checking .d.ts files in node_modules for performance
  }
,
  "include": ["src"],       // ✅ Ensures TypeScript only compiles 'src/'
  "exclude": ["node_modules", "dist"] // ✅ Ignore unnecessary files
}
